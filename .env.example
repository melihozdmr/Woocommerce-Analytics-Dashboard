# ===========================================
# WooCommerce Analytics Dashboard
# Environment Variables Example
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# Application
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
APP_NAME=WooCommerce Analytics

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/wc_analytics

# Redis (Cache & Sessions)
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# Encryption (for WooCommerce API credentials)
ENCRYPTION_KEY=your-32-character-encryption-key!

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=selmazaferoglu@gmail.com
SMTP_PASS=ddkx obnm cbsn fpds
SMTP_FROM=selmazaferoglu@gmail.com

# Push Notifications (VAPID keys)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@example.com

# External Services (Optional)
SENTRY_DSN=
ANALYTICS_ID=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Sync Settings
SYNC_INTERVAL_MINUTES=5
CACHE_TTL_MINUTES=5
